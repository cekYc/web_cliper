# Server Configuration
PORT=3000
NODE_ENV=production

# MongoDB Atlas Connection String
# Örnek: mongodb+srv://username:password@cluster.xxxxx.mongodb.net/webclipper?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/webclipper?retryWrites=true&w=majority

# JWT Secret Key (güçlü ve benzersiz olmalı)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Frontend URL (CORS için)
FRONTEND_URL=https://your-app.vercel.app
