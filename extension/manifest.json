{
  "manifest_version": 3,
  "name": "Benim Web Clipper'ım",
  "version": "1.0",
  "description": "Seçili alanı veya resmi sunucuya kaydeder.",
  "permissions": ["activeTab", "scripting", "contextMenus", "storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "host_permissions": ["http://localhost:3000/*", "<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["html2canvas.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}